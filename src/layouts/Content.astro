---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

export interface Props {
	page: string;
}

const { page } = Astro.props;
---

<Header />
<main class={`flex border-t border-light-${page}-border dark:border-dark-${page}-border w-full h-full grow`}>
	<aside class={`flex flex-col w-[250px] border-r border-light-${page}-border dark:border-dark-${page}-border items-center pt-8 px-4`}>
		<div class="flex flex-col gap-y-4 grow">
			<Nav text="Définition" link="./definition" icon="search-alt" page={page} selected={page === "definition"} />
			<Nav text="Étymologie" link="./etymologie" icon="hourglass-end" page={page} selected={page === "etymology"} />
			<Nav text="Explication" link="./explication" icon="edit" page={page} selected={page === "explication"} />
			<Nav text="Statistique" link="./statistique" icon="stats" page={page} selected={page === "statistic"} />
		</div>
	</aside>
	<div class="flex flex-col grow">
		<section class="flex flex-col grow p-16 pt-4 h-full w-full">
			<slot />
		</section>
		<Footer page={page} />
	</div>
</main>
