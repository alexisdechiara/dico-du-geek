---
export interface Props {
	page: string;
	text: string;
}

const { page, text } = Astro.props;
---

<span
	class={`flex w-fit cursor-default transition-colors duration-300 items-center align-middle text-${page}-secondary bg-${page}-background hover:bg-${page}-hover rounded-full text-tag h-6 px-4`}>
	{text}
</span>
