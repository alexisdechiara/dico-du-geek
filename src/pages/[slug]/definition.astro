---
const { slug } = Astro.params;

import Layout from "../../layouts/Layout.astro";
import Content from "../../layouts/Content.astro";
import Tag from "../../components/Tag.astro";
import { Icon } from "astro-icon";

const page = "definition";

const contents = [
	{
		title: "Geek",
		tags: ["Nom commun", "Masculin", "Angliscisme"],
		pronounciation: "gik",
		sens: [
			{
				definition:
					"Personne passionnée par les nouvelles technologies (informatique, jeux vidéo, robotique, intelligence artificielle, etc.), les sciences et les univers imaginaires (BD, comics, manga, anime, séries, films, jeux de rôle, etc.), principalement autour de la science-fiction et de la culture pop, que l'on pourrait regrouper sous le nom de culture geek.",
				example:
					"Mon ami est un véritable geek. Il passe des heures à jouer à toutes sortes de jeux, depuis les classiques de l'enfance jusqu'aux dernières sorties en réalité virtuelle.",
			},
		],
	},
];
---

<Layout title={"Le dico du geek | " + slug}>
	<Content page={page}>
		{
			contents.map(content => (
				<section class="mb-8">
					<div class="flex flex-col gap-y-6 py-6">
						<div class="flex gap-x-4 items-center">
							<h2 class="text-entry font-header text-light-definition-ternary">{content.title}</h2>
							<div class="flex gap-2 items-center">
								<span class="p-2 bg-light-definition-background rounded-full hover:bg-light-definition-hover transition-colors duration-300">
									<Icon name="fi-rr-volume" class="w-5 h-5 fill-light-definition-secondary" />
								</span>
								<span class="text-light-definition-ternary text-tag">/{content.pronounciation}/</span>
							</div>
						</div>
						<div class="flex gap-2 w-fit">
							{content.tags.map(tag => (
								<Tag page={page} text={tag} />
							))}
						</div>
					</div>
					{content.sens.map(sens => (
						<div class="flex flex-col mb-16 gap-y-6">
							<p class="text-light-definition-primary dark:text-dark-definition-primary text-paragraph">{sens.definition}</p>
							<div class="relative p-4 pr-8 rounded border-l-4 border-light-definition-ternary text-light-definition-secondary bg-light-definition-background">
								<h3 class="text-lg font-bold pb-2"> Exemple </h3>
								<p class="italic tracking-tight">{sens.example}</p>
								<a
									href="./exemples"
									class="flex w-fit items-center ml-auto justify-end gap-x-2 font-semibold cursor-pointer hover:text-light-definition-primary transition-colors duration-300 group">
									Voir plus
									<Icon name="fi-sr-arrow-right" class="w-4 h-4 fill-light-definition-secondary group-hover:fill-light-definition-primary" />
								</a>
							</div>
						</div>
					))}
				</section>
			))
		}
	</Content>
</Layout>
